<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="0.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_view_padding">

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_margin"
            android:visibility="gone"
            android:layout_alignParentStart="true"/>


        <TextView
            android:id="@+id/appName"
            android:layout_width="200dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/appIcon"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/packageName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/appIcon"
            android:layout_below="@+id/appName" />


        <TextView
            android:id="@+id/timeLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/packageName"
            android:layout_marginHorizontal="@dimen/default_margin_half"
            android:layout_centerVertical="true" />


        <Button
            android:id="@+id/limit_delete"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/fa_delete"
            android:fontFamily="@font/fa_solid_900"
            android:backgroundTint="@color/theme_dark_red"
            android:textColor="@color/white"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
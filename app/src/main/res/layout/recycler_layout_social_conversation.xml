<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_grey_rounded_corner_pressed"
    android:padding="@dimen/default_view_padding_double"
    android:layout_marginVertical="@dimen/default_margin"
    android:layout_marginHorizontal="@dimen/default_margin_double">

    <TextView
        android:id="@+id/social_conversation_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_view_size"
        android:fontFamily="@font/poppins_black"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/social_conversation_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"/>

</LinearLayout>
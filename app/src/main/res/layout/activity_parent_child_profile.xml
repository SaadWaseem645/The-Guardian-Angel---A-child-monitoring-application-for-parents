<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/background_gradient_blue"
    tools:context=".Activities.ParentChildProfileActivity">

    <TextView
        android:id="@+id/parent_child_profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent_child_profile_logout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_black"
            android:textColor="@color/white"
            android:text="@string/select_parent_profile"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:text="@string/select_parent_profile_description" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/select_profile_no_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_top_margin"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/no_parent_profiles_found"
            android:textAlignment="center"
            android:visibility="gone" />

        <ListView
            android:id="@+id/select_child_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/default_top_margin" />

        <ProgressBar
            android:id="@+id/select_child_progressbar"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>

</RelativeLayout>
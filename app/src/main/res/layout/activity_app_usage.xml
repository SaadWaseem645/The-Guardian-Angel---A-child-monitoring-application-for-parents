<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient_blue"
    tools:context=".Activities.AppUsageActivity">

    <include layout="@layout/component_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/usageRadio"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:animateLayoutChanges="true"
            android:weightSum="12"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:layoutDirection="ltr"
            android:layout_margin="0dp"
            android:checkedButton="@id/todayRadio"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/todayRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:button="@null"
                android:background="@drawable/radio_background_daily"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="12sp"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/today"/>


            <RadioButton
                android:id="@+id/weeklyRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_weight="5"
                android:background="@drawable/radio_background_weekly"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="12sp"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/sevenDay"/>
        </RadioGroup>

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layoutDirection="ltr"
            android:layout_marginVertical="2dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/default_small_text"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/installed_apps_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layoutDirection="ltr"
        android:layout_weight="1"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/installed_app_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

</LinearLayout>
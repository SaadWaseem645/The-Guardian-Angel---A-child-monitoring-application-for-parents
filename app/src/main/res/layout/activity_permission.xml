<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/permissionLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Activities.PermissionActivity">

    <ImageView
        android:id="@+id/permission_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_location"
        android:transitionName="permission_image"/>

    <TextView
        android:id="@+id/permission_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/permission_image"
        android:text=""
        android:textSize="@dimen/default_header_text"
        android:fontFamily="@font/poppins_black"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:transitionName="permission_text"/>

    <TextView
        android:id="@+id/permission_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/permission_name"
        android:text=""
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:transitionName="permission_sub"/>

    <Button
        android:id="@+id/permission_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_dark_green"
        android:drawableEnd="@drawable/ic_checkmark"
        android:text="@string/_continue"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>


    <Button
        android:id="@+id/enable_permission_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_dark_blue"
        android:textColor="@color/white"
        android:text="@string/enable_perm"
        android:padding="14dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>